/* 会展 */
/*轮播图  */
.banner {
  position: relative;
}
.banner #swiper {
  height: 196px;
}
.banner image {
  display: block;
  width: 100%;
  height: 100%; 
}

.banner .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 36rpx;
}
.banner .wx-swiper-dot{
    display: inline-flex;
    width: 10rpx;
    height: 10rpx;
    margin-left: 8rpx;
    justify-content: space-between;
    background: rgba(255,255,255,0.4);
}
.banner .wx-swiper-dot::before {
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.4);
    border-radius: 50%;
}
.banner .wx-swiper-dot-active {
    width: 20rpx;
    height: 10rpx;
}
.banner .wx-swiper-dot-active::before{
  border-radius: 200rpx;  
  background:rgba(255, 255, 255, 1); 
}

/*分类  */
.classify {
  position: relative;
  overflow: hidden;
  margin: -36rpx 14rpx 0 14rpx;
  box-shadow:0 3px 4px 0 #ddd; 
}

.classify > .menu {
  /* display: flex;
  justify-content: center;
  align-items: center; */
  margin: 0 auto;
  padding-top: 24rpx;
  border-radius: 6px;
  background: #fff;
}
.classify > .menu > .item {
  float: left;
  width: 25%;
  margin-bottom: 24rpx;
}
.classify > .menu > .item > .pic {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 24rpx;
}
.classify > .menu > .item > text {
  display: block;
  color: #2B2C3E;
  text-align: center;
  line-height: 14px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
}

/*热门推荐  */
.commoduty {
  margin: 0 16rpx 0 16rpx;
}

/*标题  */
.title {
  display: flex;
  align-items: center;
  padding: 32rpx 30rpx;
}

.title > .part1 {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.title > .part1 image {
  width: 30rpx;
  height: 36rpx;
}
.title > .part1 > .line {
  width: 30rpx;
  height: 1px;
  background: #aaa;
}

.title > .part1 > .text {
  margin-left: 12rpx;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #202020;
}

.title > .part2 {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 208rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  line-height: 30rpx;
  text-align: right;
  color: #202020;
}
.title  .part2 icon {
  display: flex;
  margin-left: 3px;
  line-height: 30rpx;
  font-size: 12px;
}

.commoduty .list {
  display: flex;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  background: #fff;
}
.commoduty .list-con {
  width: 100%;
}
.reduce {
  padding: 2rpx 16rpx;
  font-size: 12px;
  color: #FFA816;
  border: 1px solid #FFA816;
  line-height: 24rpx;
  height: 24rpx;
  border-radius: 100px;
}

.commoduty .pic-discr {
  position: relative;
  border-radius: 4rpx 4rpx 0 0;
  overflow: hidden;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.29);
}

.commoduty .yuding {
  position: absolute;
  top: 50rpx;
  right: 0;
  height: 36rpx;
  padding: 0 16rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #FFFFFF;
  text-align: left;
  line-height: 36rpx;
  background: rgba(255,170,75, 0.78);
  border-radius: 100px 0 0 100px;
}
.pic-discr image {
  display: block;
  width: 100%;
  height: 402rpx;
  border-radius: 4rpx;
}
.pic-discr .text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  color: #FFFFFF;
  background: rgba(0, 0, 0, 0.5);
}
.pic-discr .text .text-con {
  display: flex;
  align-items: center;
  height: 30px;
  margin: 0 22rpx;
}
.pic-discr .text .money {
  font-family: PingFangSC-Semibold;
  font-size: 16px;
  color: #FFFFFF;
}
.pic-discr .text .nums {
  flex: 1;
  text-align: right;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #FFFFFF;
}

.info-con {
  display: flex;
  align-items: center;
  padding: 34rpx 24rpx 30rpx 24rpx;
}
.info-cons {
  width: 100%;
}
.info-con .info-tit {
  display: block;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #000000;
  text-align: left;
}
.info-item {
  display: flex;
  margin-top: 24rpx;
}
.info-item-f {
  margin-top: 30rpx;
}
.info-item view {
  width: 85%;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #ADADAD;
  line-height: 32rpx;
}
.info-item .info-ico  {
  height: 32rpx;
  margin-right: 16rpx;
  padding: 0 10rpx;
  border-radius: 2px; 
  font-family: PingFangSC-Regular;
  line-height: 32rpx;
  font-size: 12px;
  color: #FFFFFF;
}
.yeallow {
  background: #FFAA4B;
}


.info-con .info-time {
  display: block;
  margin-bottom: 12rpx;
  color: #ADADAD;
  line-height: 24px;
  font-family: 'PingFangSC-Regular';
  font-size: 12px;
}
.info-price .price {
  margin-right: 8px;
  color: #333333;
  line-height: 36px;
  font-family: 'PingFangSC-Medium';
  font-size: 18px;
}

.no-more {
  padding-bottom: 10rpx;
  opacity: 0.3;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #222333;
  line-height: 90rpx;
  text-align: center;
}

.book {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  right: 40rpx;
  bottom: 248rpx;
  margin: auto;
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.8);
  box-shadow: 0 3px 10px 0 rgba(0,0,0,0.18);
  z-index: 99999;
}
.book text {
  display: block;
  width: 100%;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #FFFFFF;
  line-height: 16px;
}
.no-render {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
}

.no-render > .icon {
  margin-bottom: 30rpx;
  width: 300rpx;
  height: 220rpx;
}

.no-render > .text {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #666666;
  letter-spacing: -0.3px;
  line-height: 30rpx;
}