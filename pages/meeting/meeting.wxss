/* 会议 */
.menu {
  position: fixed;
  top: 0;
  width: 100%;
  background: #FFF;
  box-shadow: 0 0 10px rgba(0,0,0,0.15);
  z-index: 9999;
}

.nav-container{
  position: fixed;
  z-index: 10;
  height: 40px;
  background: #fff;
  box-shadow:0 1px 5px 1px rgba(28,28,28,0.10);
}
.nav-container view {
  display: inline-block;
  width: 28%;
  text-align: center;
  padding: 10px 0;
  line-height: 20px;
}

.nav-container .sel_color {
  color: var(--navcolor);
}

.nav-container .sel {
  position: relative;
  bottom: -38px;
  left: 0;
  display: block;
  width: 100%;
  height: 2px;
}
.nav-container .sel::after {
  position: absolute;
  bottom: 0;
  width: 20%;
  border-top: 2px solid var(--navcolor);
  content: "";
  transition: left .3s ease-in-out 0s;
  -webkit-transition: left .3s ease-in-out 0s; 
  -moz-transition: left .3s ease-in-out 0s;
  -o-transition: left .3s ease-in-out 0s; 
}

.nav-container .sel_0::after {
  left: 4%;
}
.nav-container .sel_1::after {
  left: 32%;
}
.nav-container .sel_2::after {
  left: 60%;
}
.nav-container .sel_3::after {
  left: 88%;
}
.nav-container .sel_4::after {
  left: 144%;
}
.nav-container view text {
  display: block;
  color: #575757;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  line-height: 14px;
}
.nav-container view:last-child text{
  border-right: none;
}

/*热门推荐  */
.commoduty {
  padding-top: 96rpx;
  margin: 0 16rpx 0 16rpx;
}

.commoduty .list {
  display: flex;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  background: #fff;
}
.commoduty .list-con {
