/*顶部栏  */
.top-menus-tit {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 40px;
  z-index: 9999;
  background: #fff;
}
.top-menus-tit .item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 40px;
  font-family: 'PingFangSC-Regular';
  font-size: 14px;
}
.top-menus-tit .item icon {
  margin-left: 6px;
  line-height: 40px;
  font-size: 7px;
}
.top-menus-tit .item .all_icon {
  transform: rotate(180deg);
  -ms-transform:rotate(180deg);
  -moz-transform:rotate(180deg);
  -webkit-transform:rotate(180deg);
  -o-transform:rotate(180deg); 	
}
.top-menus-tit .item image {
  width: 6px;
  height: 10px;
  margin-left: 16px;
}

/*热门  */
.mask {
  position: fixed;
  left: 0;
  top: 40px;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}
.mask .hot {
  background: #fff;
}
.mask .hot .hot-con {
  padding: 20px 15px 50px 15px;
}
.mask .hot .hot-tit {
  margin-bottom: 18px;
  color: #1C1C1C;
  line-height: 16px;
  font-family: 'PingFangSC-Regular';
  font-size: 14px;
}
.mask .hot-cons {
  overflow: hidden;
}
.mask .hot-cons- {
  width: 110%;
}
.mask .hot-cons .item {
  position: relative;
  float: left;
  width: 216rpx;
  height: 90rpx;
  margin-right: 15rpx;
  margin-bottom: 18rpx;
  border: 1px solid #F7F7F8; 
  border-radius: 4rpx;
  color: #666666;
  text-align: center;
  line-height: 90rpx;
  font-family: 'PingFangSC-Regular';
  font-size: 13px;
  background: #F7F7F8;
}
.mask .hot-cons .sel-img {
  position: absolute;
  right: -2rpx;
  bottom: -2rpx;
  width: 16px;
  height: 16px;
}
.mask .hot-cons .item-sel {
  color: #64A5FF;
  border: 1px solid #64A5FF; 
  border-radius: 2px;
  background: #DEECFF;
}
.mask .btn {
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask .btn view {
  width: 50%;
  height: 47px;
  text-align: center;
  line-height: 47px;
  font-size: 16px;
  font-family: 'PingFangSC-Regular';
}
.mask .btn .cancel {
  background: #FFFFFF;
  box-shadow: 0 0 3px 0 rgba(0,0,0,0.14);
}

/*热门-目的地-列表  */
.commoduty {
  padding-top: 80rpx;
  padding-bottom: 40rpx;  
  background: #fff;
}
.commoduty .container {
  padding: 0 15px;
}
.commoduty .list {
  margin-top: 20px;
}
.reduce {
  padding: 2rpx 16rpx;
  font-size: 12px;
  color: #FFA816;
  border: 1px solid #FFA816;
  line-height: 24rpx;
  height: 24rpx;
  border-radius: 100px;
}

.commoduty .pic-discr {
  overflow: hidden;
  float: left;
  position: relative;
  width: 110px;
  height: 110px;
  margin-right: 9px;
  border-radius: 4rpx;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.29);
}

.pic-discr image {
  display: block;
  width: 100%;
  height: 100%;
}
.pic-discr text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 20px;
  color: #FFFFFF;
  text-align: center;
  line-height: 20px;
  font-family: 'PingFangSC-Regular';
  font-size: 12px;
  background: rgba(0, 0, 0, 0.5);
}

.info-con {
  flex: 1;
  display: flex;
  align-items: center;
  height: 110px;
}
.info-cons {
  width: 100%;
}
.info-con .info-tit {
  height: 36px;
  margin-bottom: 6px;
  color: #000000;
  text-align: left;
  line-height: 18px;
  font-family: 'PingFangSC-Regular';
  font-size: 14px;
}
.info-con .info-time {
  margin-bottom: 21px;
  color: #333333;
  line-height: 24px;
  font-family: 'PingFangSC-Regular';
  font-size: 12px;
}
.info-price .price {
  margin-right: 8px;
  color: #333333;
  line-height: 36px;
  font-family: 'PingFangSC-Regular';
  font-size: 16px;
}

/*佣金  */
.commiss {
  display: inline-flex;
  align-items: center;
  width: 100%;
}
.commiss-con {
  display: flex;
  flex: 1;
  font-size: 16px;
  font-family: 'PingFangSC-Regular';
}
.commiss-con text {
  color: #EE6723;
}
.join {
  width: 166rpx;
  height: 52rpx;
  border-radius: 100px;
  color: #FFFFFF;
  text-align: center;
  line-height: 52rpx;
  font-size: 12px;
  font-family: PingFangSC-Regular;
}
.joined {
  background: #ADADAD;
}

.no-more {
  padding-bottom: 40rpx;
  text-align: center;
}

.no-more > .line {
  display: inline-block;
  vertical-align: middle;
  width: 80rpx;
  height: 1px;
  background: #AAA;
}

.no-more > .text {
  margin: 0 30rpx;
  vertical-align: middle;
  font-size: 14px;
  line-height: 60rpx;
  color: #AAA;
}

.no {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
}

.no > .icon {
  margin-bottom: 30rpx;
  width: 300rpx;
}

.no > .text {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #666666;
  letter-spacing: -0.3px;
  line-height: 30rpx;
}

.no-more {
  padding-bottom: 10rpx;
  opacity: 0.3;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #222333;
  line-height: 90rpx;
  text-align: center;
}
