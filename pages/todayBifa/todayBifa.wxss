}
.footer .sel-nums {
  position: absolute;
  right: -20rpx;
  top: -4rpx;
  width: 32rpx;
  height: 32rpx;
  border: 1px solid #FFFFFF;
  border-radius: 50%;
  text-align: center;
  line-height: 32rpx;
  background: #FF972C;
}

.footer .sel-con-tip image {
