/*奖励明细 */
.detail-list {
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  background: #fff;
}
.detail-list .item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 14rpx 0;
}
.item image {
  width: 84rpx;
  height: 84rpx;
  margin-right: 24rpx;
  border-radius: 50%;
}
.detail-list .item text {
  display: block;
}
.detail-list .item .part1 {
  flex: 1;
  color: #070707;
  font-size: 14px;
  font-family: 'PingFangSC-Light';
}
.detail-list .item .part1 .detail {
  float: left;
  max-width: 40%;
}

.detail-list .item .time {
  margin-top: 10rpx;
  opacity: 0.4;
  color: #070707;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
}
.detail-list .item .part2 {
  color: #000000;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
}
.detail-list .item .money {
  margin-bottom: 10rpx;
  color: #333333;
  font-size: 18px;
  font-family: 'PingFangSC-Medium';
}

.detail-list .item .fail {
  color: #FF0000;
} 

.detail-list .item .checking {
  color: #FF972C;
}

/* commodity */
.commodity>.part1 {
    display: flex;
    padding: 30rpx 0;
}

.commodity .part1 .cover {
    width: 176rpx;
    height: 176rpx;
    border-radius: 4rpx;
    background: 'url('+var(--imgDomain)+'/detail-bj.jpg)';
}

.commodity .part1 .content {
  display: flex;
  align-items: center;
  flex: 1;
  margin-left: 30rpx;
  overflow: hidden;
}
.commodity .part1 .content-info {
  display: block;
  width: 100%;
}

.commodity .part1 .content .name {
  height: 64rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #222333;
  line-height: 32rpx;
}

.commodity .part1 .content .starting-time {
  margin-bottom: 12rpx;
  color: #ADADAD;
  font-family: 'PingFangSC-Regular';
  font-size: 12px;
}


.commodity .part1 .content .bottom {
    display: flex;
    justify-content: center;
    align-content: center;
    margin-top: 18rpx;
    line-height: 32rpx;
}

.commodity .part1 .content .bottom .price {
     flex: 1; 
}

.commodity .part1 .content .bottom .money {
    font-family: PingFangSC-Regular;
    font-size: 16px;
    color: #000000;
    line-height: 32rpx;
}

.commodity .part1 .content .bottom .reduce {
    margin-left: 12rpx;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #FFA816;
    line-height: 32rpx;
}

.commodity .part1 .num {
  flex: 1;
  width: 18%;
  text-align: right;
  color: #262733;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}

.pic-discr {
  position: relative;
  border-radius: 4rpx;
  overflow: hidden;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.29);
}

.pic-discr image {
  display: block;
  width: 160rpx;
  height: 160rpx;
  border-radius: 4rpx;
}
.pic-discr text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 20px;
  color: #FFFFFF;
  text-align: center;
  line-height: 20px;
  font-family: 'PingFangSC-Regular';
  font-size: 12px;
  background: rgba(0, 0, 0, 0.5);
}

.no {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
}

.no > .icon {
  margin-bottom: 30rpx;
  width: 300rpx;
}

.no > .text {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #666666;
  letter-spacing: -0.3px;
  line-height: 30rpx;
}

.no-more {
  padding-bottom: 10rpx;
  opacity: 0.3;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #222333;
  line-height: 90rpx;
  text-align: center;
}
