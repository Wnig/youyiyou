/*我的粉丝  */
.fans-list {
  padding: 0 30rpx;
  background: #fff;
}
.fans-list .item {
  display: flex;
  align-items: center;
  padding: 26rpx 0;
}
.fans-list .item image {
  width: 84rpx;
  height: 84rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}
.item .fans-info {
  flex: 1;
  width: 40%;
}
.item .name {
  display: block;
  width: 80%;
  color: #222333;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.item .time {
  display: block;
  color: #989A9C;
  font-size: 12px;
  font-family: 'PingFangSC-Light';
}

.control {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #989A9C;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Light';
}
.control .part1 {
  margin-right: 30rpx;
}
.control icon {
  display: block;
  color: #989A9C;
  font-size: 24px;
} 
.control text {
  display: block;
}

/*弹窗  */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.6);
}
.mask .tips {
  width: 540rpx;
  height: 288rpx;
  padding: 0 10rpx;
  border-radius: 6px;
  background: #fff;
}
.mask .title {
  height: 100rpx;
  color: #1C1C1C;
  text-align: center;
  line-height: 100rpx;
  font-size: 16px;
  font-family: 'PingFangSC-Regular';
}
.mask .content {
  display: flex;
  justify-content: center;
  align-content: center;
  height: 100rpx;
  color: #666666;
  line-height: 50rpx;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.mask .close {
  height: 88rpx;
  color: #000000;
  text-align: center;
  line-height: 88rpx;
  font-size: 16px;
  font-family: 'PingFangSC-Regular';
}
.mask .copy {
  width: 110rpx;
  height: 50rpx;
  margin-left: 20rpx;
  text-align: center;
  line-height: 50rpx;
  border: 1px solid #64A5FF;
  border-radius: 2px;
}

.no {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
}

.no > .icon {
  margin-bottom: 30rpx;
  width: 300rpx;
}

.no > .text {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #666666;
  letter-spacing: -0.3px;
  line-height: 30rpx;
}

.no-more {
  padding-bottom: 10rpx;
  opacity: 0.3;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #222333;
  line-height: 90rpx;
  text-align: center;
}