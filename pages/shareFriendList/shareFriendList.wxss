.scroll-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  bottom: 0;
  background: url('https://mall.xpaik.com/photoServer/xpaikmall/sharebj@3x.jpg');
  background-size: 100% 100%;
}

.friends-container {
  margin: 30rpx 30rpx 0;
  padding-bottom: 24rpx;
  background: rgba(255, 255, 255, .2);
  border-radius: 4px;
}

.friends-container > .title {
  padding: 32rpx 0 2rpx;
  text-align: center;
}

.friends-container > .title > .line {
  vertical-align: middle;
  width: 216rpx;
}

.friends-container > .title > .text {
  display: inline-block;
  margin: 0 34rpx;
  vertical-align: middle;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #FFFFFF;
  line-height: 32rpx;
}

.friends-container > .item {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-top: 30rpx;
}

.friends-container > .item > .avatar {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
}

.friends-container > .item > .name {
  flex: 1;
  margin: 0 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  line-height: 28rpx;
}

.friends-container > .item > .money {
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #F8E71C;
  line-height: 24rpx;
}

.more {
  margin-top: 40rpx;
  text-align: center;
}

.more > .text {
  display: inline-block;
  vertical-align: middle;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #FFFFFF;
  line-height: 32rpx;
}

.more > .icon-xyb {
  margin-left: 16rpx;
  vertical-align: middle;
  font-size: 10px;
  color: #FFF;
}