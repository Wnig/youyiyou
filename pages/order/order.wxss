.menu {
  position: fixed;
  top: 0;
  width: 100%;
  background: #FFF;
  box-shadow: 0 0 10px rgba(0,0,0,0.15);
  z-index: 1;
}

.menu > .main {
  display: flex;
  align-items: center;
}

.menu > .main > .item {
  position: relative;
  flex: 1;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #575757;
  line-height: 44px;
}
.menu > .main > .item text {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  width: 36rpx;
  height: 26rpx;
  border: 1px solid #FFA816;
  border-radius: 100px;
  color: #FFA816;
  line-height: 26rpx;
  font-size: 9px;
  font-family: 'PingFangSC-Regular';
  background: #fff;
}

.menu > .main > .select {
  color: var(--themeBg);
}

.menu > .bot-line-container > .slide-wrapper {
  width: 25%;
  padding: 0 38rpx;
  box-sizing: border-box;
  margin-left: 0%;
  transition: 0.3s;
}

.menu > .bot-line-container > .slide-wrapper > .slide {
  height: 2px;
  background: var(--themeBg);
}

/* list-container */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.list-container {
  padding: 46px 0 20rpx;
}

.list-container > .list-item {
  margin-top: 14rpx;
  background: #FFF;
  padding: 0 30rpx;
}

.list-container > .list-item > .part1 {
  display: flex;
  align-items: center;
  height: 80rpx;
}

.list-container > .list-item > .part1 > .iden {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #222333;
  line-height: 14px;
}

.list-container > .list-item > .part1 > .status {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  line-height: 14px;
}

.list-container > .list-item > .part1 .red {
  color: #f00;
}


.list-container > .list-item > .part1 > .status.red {
  color:#FF3800;
}

.list-container > .list-item > .part2 {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.pic-discr {
  position: relative;
  border-radius: 4rpx;
  overflow: hidden;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.29);
}

.pic-discr image {
  display: block;
  width: 160rpx;
  height: 160rpx;
}
.pic-discr text {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 20px;
  color: #FFFFFF;
  text-align: center;
  line-height: 20px;
  font-family: 'PingFangSC-Regular';
  font-size: 12px;
  background: rgba(0, 0, 0, 0.5);
}

.list-container > .list-item > .part2 > .cover {
  width: 140rpx;
  height: 140rpx;
  background:url('https://mall.xpaik.com/photoServer/xpaikmall/detail-bj.jpg');
}

.list-container > .list-item > .part2 > .content {
  flex: 1;
  margin-left: 26rpx;
  overflow: hidden;
}

.list-container .name {
  height: 40px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #222333;
  line-height: 20px;
}

.list-container .spec {
  margin-top: 12rpx;
}

.list-container .spec > .spec-item {
  display: inline-block;
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #222333;
  line-height: 14px;
}

.list-container .price-num {
  display: flex;
  align-items: center;
  margin-top: 14rpx;
}

.list-container .price-num > .part1 {
  flex: 1;
  display: flex;
  align-items: center;
}

.list-container .price-num > .part1 > .money {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #222333;
  line-height: 16px;
}

.list-container .price-num > .part1 > .share-to-reduce {
  margin-left: 20rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFA816;
  line-height: 14px;
}

.list-container .price-num > .part2 {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #262733;
  line-height: 14px;
}

.list-container > .list-item > .part3 {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.list-container > .list-item > .part3 > .timer {
  flex: 1;
  display: flex;
  align-items: center;
}

.list-container > .list-item .clock {
  padding: 0 6rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  line-height: 18px;
  background: #3A3A3A;
  border-radius: 3px;
  color: #FFFFFF; 
}

.list-container > .list-item .semicolon {
  margin: 0 4rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  line-height: 28rpx;
}

.list-container > .list-item .text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #878787;
  line-height: 28rpx;
}

.list-container > .list-item .timer  .ml{
  margin-left: 14rpx;
}

.list-container > .list-item .timer .theme-c {
  color: #FFA816;
}

.list-container > .list-item > .part3 > .operation-btns {
  position: relative;
  padding: 0 24rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 2px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
}
.list-container .list-item .part3 .cancel-btn {
  color: #000;
  margin-right: 24rpx;
  border: 2rpx solid #000;
  border-radius: 4px;
}
.list-container > .list-item > .part3 > .operation-btns button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  bottom: 0;
  opacity: 0;
}

.list-container > .list-item > .part3 button:after {
  border: none;
}

.list-container > .list-item > .part3 > .operation-btns-border {
  border: 1px solid #7F7F7F; 
  color: #333;
  box-sizing: border-box;
}

.no-render {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
}

.no-render > .icon {
  margin-bottom: 30rpx;
  width: 300rpx;
  height: 220rpx;
}

.no-render > .text {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #666666;
  letter-spacing: -0.3px;
  line-height: 30rpx;
}

.no-more {
  padding-top: 20rpx;
  text-align: center;
}

.no-more > .line {
  vertical-align: middle;
  display: inline-block;
  width: 100rpx;
  height: 1px;
  background: #D8D8D8;
}

.no-more > .text {
  margin: 0 30rpx;
  vertical-align: middle;
  opacity:0.3;
  font-family:PingFangSC-Regular;
  font-size:12px;
  color:#222333;
  line-height:80rpx;
}

/*分享弹窗  */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}
.mask-bg {
  width: 100%;
  height: 100%;
}
.mask .share {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 456rpx;
  background: #fff; 
}
.mask .title {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;  
  color: #666666;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
  background: #F5F5F5;
}
.mask .title icon {
  position: absolute;
  top: 0;
  right: 28rpx;
  line-height: 80rpx;
  font-size: 18px;
}
.mask .share-con {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 376rpx;
}
.mask .item {
  position: relative;
  margin: 0 55rpx;
}
.kf-mask .item {
  position: relative;
  margin: 0 113rpx;
}
.mask .item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  background-color: transparent;
  z-index: 2;
}
.mask .item button:after {
  border: none;
}
.mask .item image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 24rpx;
}
.mask .item text {
  display: block;
  color: #666666;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
}

.business-name {
  display: flex;
  align-items: center;
  height: 68rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #222333;
  line-height: 14px;
}
.business-name image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}
