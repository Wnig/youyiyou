/*我的粉丝  */
.fans-list {
  padding: 0 30rpx;
  background: #fff;
}
.fans-list .item {
  display: flex;
  align-items: center;
  padding: 26rpx 0;
}
.fans-list .item image {
  width: 84rpx;
  height: 84rpx;
  margin-right: 16rpx;
  border-radius: 50%;
}
.item .fans-info {
  flex: 1;
  width: 80%;
}
.item .name {
  display: block;
  width: 40%;
  color: #222333;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.item .time {
  display: block;
  opacity: 0.4;
  color: #000000;
  font-size: 12px;
  font-family: 'PingFangSC-Light';
}

.no {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
}

.no > .icon {
  margin-bottom: 30rpx;
  width: 300rpx;
}

.no > .text {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #666666;
  letter-spacing: -0.3px;
  line-height: 30rpx;
}

.no-more {
  padding-bottom: 10rpx;
  opacity: 0.3;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #222333;
  line-height: 90rpx;
  text-align: center;
}