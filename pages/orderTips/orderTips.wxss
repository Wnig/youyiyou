/*付款成功  */
.pay-success {
  margin-bottom: 14rpx;
  padding-top: 70rpx;
  padding-bottom: 60rpx;
  background: #fff;
}
.pay-tips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 60rpx;
}

.pay-tips image {
  display: block;
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto 26rpx;
}
.pay-tips text {
  line-height: 18px;
  font-size: 18px;
  font-family: 'PingFangSC-Regular';
}
.pay-success .success .tip {
  display: block;
  color: #19C80A;
  text-align: center;
}
.pay-success .fail .tip {
  display: block;
  color: #FF3E4E;
  text-align: center;
}
.pay-tips .money {
  margin-top: 44rpx;
  color: #000000;
  text-align: center;
  line-height: 24px;
  font-size: 30px;
  font-family: 'PingFangSC-Regular';
}
.pay-tips .plantime {
  margin-top: 15px;
  color: #989A9C;
  text-align: center;
  line-height: 14px;
  font-family: 'PingFangSC-Regular';
  font-size: 14px;
}

.btn-con {
  display: flex;
  justify-content: center;
  align-items: center;
}
.btns .btn {
  width: 200rpx;
  height: 64rpx;
  margin: 0 30rpx;
  border: 1px solid #666666;
  border-radius: 3px;
  color: #1C1C1C;
  text-align: center;
  line-height: 64rpx;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.btns .share-btn {
  border: 1px solid #FF972C;
  color: #fff;
  background: #FF972C;
}

/*查看订单  */
.order-info {
  padding: 15rpx 30rpx 0 30rpx;
  background: #fff;
}
.order-info .part1 {
   width: 100%; 
   padding-bottom: 10rpx;
}
.order-info .part1 .item {
  color: #000000;
  line-height: 45rpx;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
}
.order-info .part1 .item text {
  margin-right: 50rpx;
}
.order-info .part2 {
  width: 50%;
  color: #999999;
  text-align: right;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.order-info .part2 icon {
  margin-left: 18rpx;
  font-size: 14px;
}

.timer {
  width: 100%;
  padding: 20rpx 0;
}

.timer .clock {
  padding: 0 6rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  line-height: 18px;
  background: #3A3A3A;
  border-radius: 3px;
  color: #FFFFFF; 
}

.timer .semicolon {
  margin: 0 4rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  line-height: 28rpx;
}

.timer .text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #878787;
  line-height: 38rpx;
}

.timer  .ml{
  margin-left: 14rpx;
}

.timer .theme-c {
  color: #FFA816;
}

.ms {
  display: inline-block;
}

.timer .timer-con {
  float: left;
  display: flex;
  align-items: center;
  height: 68rpx;
}

.share-btn {
  float: right;
  width: 160rpx;
  height: 68rpx;
  border-radius: 2px;
  color: #FFFFFF;
  line-height: 68rpx;
  text-align: center;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}

/*分享弹窗  */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}
.mask-bg {
  width: 100%;
  height: 100%;
}
.mask .share {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 456rpx;
  background: #fff; 
}
.mask .title {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;  
  color: #666666;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
  background: #F5F5F5;
}
.mask .title icon {
  position: absolute;
  top: 0;
  right: 28rpx;
  line-height: 80rpx;
  font-size: 18px;
}
.mask .share-con {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 376rpx;
}
.mask .item {
  position: relative;
  margin: 0 55rpx;
}
.mask .item button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  background-color: transparent;
  z-index: 2;
}
.mask .item button:after {
  border: none;
}
.mask .item image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 24rpx;
}
.mask .item text {
  display: block;
  color: #666666;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
}



