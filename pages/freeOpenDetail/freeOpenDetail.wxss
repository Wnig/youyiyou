/*免费开店  */
.input-con {
  height: 100rpx;
  padding: 30rpx;
  background: #fff;
}
.input-con textarea {
  width: 100%;
  height: 72rpx;
  border: none;
  outline: none;
  color: #000000;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.input-con view {
  color: #AAAAAA;
  text-align: right;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}

/*保存  */
.btn {
  width: 650rpx;
  height: 80rpx;
  border-radius: 100px;
  margin: 100rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 15px;
  font-family: 'PingFangSC-Regular';
}