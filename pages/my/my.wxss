/* pages/my/my.wxss */
/* head */
.head {
  background: url('https://web.youyiyoula.com/photoServer/yytx/bg-pattern@3x.svg') center center no-repeat;
  background-size: 100%;
  background-color: #FFF;
  height: 148rpx;
  padding-top: 128rpx;
  position: relative;
}

.my-info {
  position: relative;
  margin:  90rpx 16rpx 0 16rpx;
  padding-top: 138rpx;
  box-shadow: 0 2px 10px 0 rgba(0,0,0,0.05);
  border-radius: 16rpx; 
  background: #fff;
}
.head  .avatar {
  position: absolute;
  left: 0;
  right: 0;
  top: -94rpx;
  margin: auto;
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
}

.head  .side {
  position: relative;
  margin-bottom: 44rpx;
}

.head  .side text {
  display: block;
  margin: 0 auto 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 20px;
  color: #262628;
  text-align: center;
  line-height: 24px;
}
.head  .side .my-phone {
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #C2C4CA;
  text-align: center;
}

.head  .side  .write-phone {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 164rpx;
  height: 36rpx;
  margin: 0 auto;
  opacity: 0.34;
  background: #000000;
  border-radius: 100px;
  line-height: 36rpx;
}

.head  .side  .write-phone  .text {
  margin: 0;
  font-family: PingFangSC-Light;
  font-size: 11px;
  color: #FFF;
  line-height: 36rpx;
}

.head  .side  .write-phone  .icon {
  margin: 0 0 0 4rpx;
  font-size: 9px;
  color: #FFF;
  line-height: 36rpx;
}

.head  .side  .write-phone  button {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}

.head  .no-user {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 248rpx;
  height: 80rpx;
  margin: 0 auto 62rpx;
  border: 1rpx solid var(--themeBg);
  border-radius: 100px;
  color: var(--themeBg);
}

.head  .no-user  .text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: var(--themeBg);
}

.head  .no-user  .button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  bottom: 0;
  opacity: 0;
}

/* group */
.group  .cell {
  display: flex;
  align-items: center;
  height: 96rpx;
  position: relative;
  padding-left: 44rpx;
}
.group  .cell image {
  width: 60rpx;
  height: 60rpx;
}

.group  .cell  .icon {
  font-size: 60rpx;
}
.group  .cell  .icon-bz {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 36rpx;
}
.group  .cell  .icon-jt {
  width: 100rpx;
  color: #C3C3C3;
  text-align: center;
  font-size: 14px;
  font-family: PingFangSC-Light;
}

.group  .cell  .text {
  flex: 1;
  margin-left: 10rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #4D4D4D;
  letter-spacing: -0.34px;
  line-height: 14px;
}

.group  .cell  .icon-xyb {
  margin-right: 30rpx;
  font-size: 20rpx;
  color: #808080;
}

.group  .cell  button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  bottom: 0;
  opacity: 0;
}

.getPhone{
  background-color: #000;
  display: block;
  border: 0;
  opacity: 0;
  height: 100%;
  width:60%;
  position: absolute;
}

.edition {
  margin-top: 60rpx;
  font-size: 14px;
  text-align: center;
  color: #B7B7B7;
}

/*分享弹窗  */
.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}
.mask-bg {
  width: 100%;
  height: 100%;
  opacity: 0;
  transition: all 0.2s;
  -ms-transition: all 0.2s;
  -moz-transition: all 0.2s;
  -webkit-transition: all 0.2s;
  -o-transition: all 0.2s;
}
.hot-mask {
  top: 99px;
  z-index: 99999;
}
.mask .share {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 456rpx;
  background: #fff; 
}
.mask .title {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;  
  color: #666666;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
  background: #F5F5F5;
}
.mask .title icon {
  position: absolute;
  top: 0;
  right: 28rpx;
  line-height: 80rpx;
  font-size: 18px;
}
.mask .share-con {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 376rpx;
}
.mask .items {
  position: relative;
  margin: 0 113rpx;
}
.mask .items button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  margin: 0;
  padding: 0;
  border: none;
  outline: none;
  background-color: transparent;
  z-index: 2;
}
.mask .items button:after {
  border: none;
}
.mask .items image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 24rpx;
}
.mask .items text {
  display: block;
  color: #666666;
  text-align: center;
  font-size: 12px;
  font-family: 'PingFangSC-Regular';
}