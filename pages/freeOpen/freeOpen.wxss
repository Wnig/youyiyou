/*免费开店  */
.free-open {
  padding-left: 30rpx;
  background: #fff;
}
.item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.item text {
  color: #000000;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.shop-logo {
  display: flex;
  align-items: center;
}
.shop-logo text {
  flex: 1;
}
.item icon {
  margin-left: 32rpx;
  margin-right: 40rpx;
  color: #bbb;
  line-height: 84rpx;
  font-size: 28rpx;
}
.free-open .logo {
  display: flex;
  width: 84rpx;
  height: 84rpx;
}
.item .conts {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 84rpx;
  margin-left: 164rpx;
  text-align: right;
  font-size: 14px;
  font-family: 'PingFangSC-Regular';
}
.item view text {
  opacity: 0.4;
  width: 20%;
  text-align: center;
}

/*协议  */
.compact {
  display: flex;
  align-items: center;
  height: 60rpx;
  margin-top: 90rpx;
  padding: 0 30rpx;
  color: #A8A8A8;
  line-height: 60rpx;
  font-size: 12px;
  font-family: 'PingFangSC-Light';
}
.compact image {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.compact icon {
  margin-right: 16rpx;
  line-height: 60rpx;
  font-size: 16px;
}

/*下一步  */
.btn {
  display: block;
  width: 650rpx;
  height: 80rpx;
  border-radius: 100px;
  margin: 100rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 15px;
  font-family: 'PingFangSC-Regular';
}