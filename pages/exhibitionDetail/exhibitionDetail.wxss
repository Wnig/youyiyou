} */

.mask-tips .content .p {
  position: relative;
  margin-bottom: 24rpx;
  padding-left: 38rpx;
}
.mask-tips .content .num {
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 24rpx;
  height: 24rpx;
  margin-right: 14rpx;
  text-align: center;
  line-height: 24rpx;
  font-size: 10px;
  font-family: 'PingFangSC-Regular';
}

.mask-tips .tips .ok {
  color: #4CCBD4;
  text-align: center;
  line-height: 44px;
  font-family: 'PingFangSC-Regular';
  font-size: 16px;
}

