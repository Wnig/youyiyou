/* 位置 */
page {
  height: 100%;
}
.my-location {
  height: 100%;
}
#map {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  bottom: 128px;
  height: auto;
}

.img-cio {
  position: absolute;
  left: 17px;
  bottom: 175px;
  width: 50px;
  height: 50px;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #FFFFFF;
}
.footer .info-con {
   padding: 21px 0 13px 0;
   margin: 0 15px;
}
.footer .tit-name {
  margin-bottom: 14px;
  font-family: 'PingFangSC-Medium';
  font-size: 20px;
  color: #000000;
  line-height: 20px;
}
.footer .addr-info {
  display: flex;
  color:#ADADAD;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  line-height: 12px;
}
.footer .addr {
  flex: 1;
}
.icons-con {
  display: flex;
  justify-content: center;
  margin: 0 15px;
}
.icons-con .item {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  padding: 14px 0;
}
.icons-con image {
  width: 20px;
  height: 20px;
}
.icons-con text {
  font-family: PingFangSC-Medium;
  font-size: 14px;
}
